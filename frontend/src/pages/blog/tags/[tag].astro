---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '@src/layouts/Default.astro';
import BlogList from '@src/components/blog/BlogList.astro';
import { Button } from '@eliancodes/brutal-ui';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog').then((collection) => collection.reverse());

  const tags: string[] = [];

  allPosts.forEach((post) => {
    post.data.tags.forEach((tag) => {
      tags.push(tag.toLowerCase());
    });
  });

  return Array.from(new Set(tags)).map((tag) => ({
    params: { tag },
    props: {
      tag,
      blogposts: allPosts.filter((post) => post.data.tags.map((t) => t.toLowerCase()).includes(tag)),
    },
  }));
}

interface Props {
  tag: string;
  blogposts: CollectionEntry<'blog'>[];
}

const { tag, blogposts } = Astro.props;
---

<Layout
  title={`Blog: ${tag}`}
  description={`Blog | All posts tagged with ${tag}`}
  pageTitle={`Blog | Blogposts tagged with ${tag}`}
>
  <main class="p-6 bg-purple grid gap-4">
    <div>
      <Button href="/blog/">&larr; Back to blog</Button>
    </div>
    <BlogList posts={blogposts} />
  </main>
</Layout>
