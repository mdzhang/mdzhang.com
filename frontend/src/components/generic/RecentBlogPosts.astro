---
import { Button, Card } from '@eliancodes/brutal-ui';
import BlogList from '../blog/BlogList.astro';
import { getPosts } from '@src/lib/api';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const allPosts = await getPosts();
debugger;
const posts = allPosts.reverse().slice(0, count ?? 3);
---

<section class="mt-8">
  <Card>
    <div class="flex justify-between items-start">
      <h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">Recent Blogposts</h2>
      <div class="hidden md:block">
        <Button href="/blog/">Go to blog &rarr;</Button>
      </div>
      <div class="block md:hidden">
        <Button href="/blog/">to blog</Button>
      </div>
    </div>
    <BlogList posts={posts} />
  </Card>
</section>
